generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Plan {
  id                Int    @id @default(autoincrement())
  name              String @unique
  enhancementsLimit Int?   @map("enhancements_limit")
  users             User[]

  @@map("plans")
}

model User {
  id                Int                @id @default(autoincrement())
  email             String             @unique
  photoEnhancements PhotoEnhancement[]
  plan              Plan               @relation(fields: [planId], references: [id])
  planId            Int                @map("plan_id")

  @@map("users")
}

model PhotoEnhancementResult {
  id    Int    @id @default(autoincrement())
  model String
  url   String

  photoEnhancement   PhotoEnhancement? @relation(fields: [photoEnhancementId], references: [id])
  photoEnhancementId Int?              @map("photo_enhancement_id")

  @@map("photo_enhancement_results")
}

model PhotoEnhancement {
  id               Int                      @id @default(autoincrement())
  user             User                     @relation(fields: [userId], references: [id])
  userId           Int                      @map("user_id")
  effect           String
  originalPhotoUrl String
  results          PhotoEnhancementResult[]

  @@map("photo_enhancements")
}
